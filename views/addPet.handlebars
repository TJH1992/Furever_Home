<div class="container">
  <div class="jumbotron">
    <h1>FUR-Ever Home</h1>
    <h3>Adopt your new pet!</h3>
    <hr>
    <a href="/" class="btn btn-danger btn-lg">
      <span class="fa fa-eye"></span> Search Pets</a>
    <a href="/allPets" class="btn btn-danger btn-lg">
      <span class="fa fa-th-list"></span> All Pets</a>
  </div>
  <div class="row">

    <div class="col-lg-12">

      <div class="card">
        <div class="card-header">
          Add Pets
        </div>
        <div class="card-body">
          <form action="" method="POST" role="form">

            <div class="form-group">
              <label for="">Name</label>
              <input type="text" class="form-control" id="name" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Description</label>
              <input type="text" class="form-control" id="description" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Breed</label>
              <input type="text" class="form-control" id="breed" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Age</label>
              <input type="text" class="form-control" id="age" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Gender</label>
              <input type="text" class="form-control" id="gender" placeholder="">
            </div>

            <div class="form-group">
              <label for="">Location</label>
              <input type="text" class="form-control" id="location" placeholder="">
            </div>

          </form>
          <br>
          <div class="text-right">
            <button type="submit" class="btn btn-primary btn-md" id="add-btn">
              <span class="fa fa-fire"></span> Add Pet</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<script src="../public/js/addPet.js" type="text/javascript"></script>